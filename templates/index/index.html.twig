{% extends 'base.html.twig' %}

{% block title %}Sport today{% endblock %}

{% block body %}
    <div class="d-flex">
        {% for event in events %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ event.name }}</h5>
                    <p class="card-text">
                        {{ event.dateStart|date }}
                        {{ event.dateEnd|date }}
                    </p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
